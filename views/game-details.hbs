<h1>This is the Game Details Page</h1>
<div class='details detailsPage details-bg'>
<div style='width:50vw'>

<h1 class='review-header details-border'>
  {{title}}
</h1>
<div class='details-border'>
<img style="height: 62vh; width: 30vw;" src='{{this.image}}'>

<div style="float:right">
  <h1>
  {{platforms}}
  </h1>
</div>


</div>
<div class="details-border">
<h4 class='review-header'>Reviews</h4>

<artcle class='comment'>
  <div class='comment-container'>

  {{#each reviews}}

<div>
{{this.user.username}}<br>

<h4>Rating:
{{this.rating}}<br>
</h4>
<h5>
{{this.comment}}
</h5>

  <hr>
</div>
 
  {{/each}}
  </div>
</artcle>

 
</div>






<button class='details-btn'type="button"><a href="/{{this._id}}/new-review"><h5>Add Review</h5></a></button>
<button class='details-btn'type="button"><a href="/edit-game/{{this._id}}"><h5>Edit Info</h5></a></button>

<form action="/delete-user" method="POST"><button class='details-btn'>Delete Game</button></form>

</div>
</div>



